  <h1>STRIVE</h1>

  <body>
    <h2> <b>Goal: </b><%= @goal.goal_name%> </h2>
    <h4> <b>Goal Categories: </b><% @goal.categories.each do |c|%> </h4>
    <li> <%= c.goal_type %><br></li>
    <%end%>

    <h4>To accomplish this goal you must complete the following: </h4>
    <%@goal.tasks.each do |task|%>
    <li> <%=link_to task.task_name.capitalize, task %><br></li>
    <%end%>
 </body>

  <p><%= link_to "Edit Goal", edit_goal_path(@goal)%></p>
  <p><%= link_to "See your Goals", goals_path%></p>
  <p><%= link_to "Home Page", users_path(@user)  %></p>
  <button class="ui black button"><%= button_to "Delete Goal", goal_path(@goal), method: "delete"%></button>
